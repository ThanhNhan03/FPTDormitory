@page "{id:guid}"
@model client_app.Pages.HouseEditModel
@{
}
<h2>Edit House</h2>
<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" asp-for="House.Name" required />
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            <input type="text" class="form-control" id="Status" name="Status" asp-for="House.Status" required />
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control" id="Description" name="Description" asp-for="House.Description" required></textarea>
        </div>
        <div class="form-group">
            <label for="FloorId">Floor ID</label>
            <input type="text" class="form-control" id="FloorName" name="FloorName" asp-for="House.FloorName" required />
        </div>
        <button type="submit" class="btn btn-success">Update House</button>
    </form>
</div>
