@page
@model client_app.Pages.DashBoardModel
@{
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">Dorm A</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">Dorm B</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    
    <div class="card mb-4">
        <div class="card-body">
                <a class="btn btn-primary" href="/HouseForm">Add House</a>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Floor Name</th>
                        <th>Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var house in Model.Houses)
                    {
                        <tr>
                            <td>@house.Id</td>
                            <td>@house.Name</td>
                            <td>@house.Status</td>
                            <td>@house.Description</td>
                            <td>@house.FloorName</td>
                                <td>
                                    <a class="btn btn-primary" href="/HouseEdit/@house.Id">Edit</a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@house.Id" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this house?');">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatablesSimple').DataTable();
        });
    </script>
}
